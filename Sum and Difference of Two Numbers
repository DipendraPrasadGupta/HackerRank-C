#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main()
{
    
    int a,b;
    float c,d;
    scanf("%d%d",&a,&b);
    scanf("%f%f",&c,&d);
    float sum,sum1,sum2,sum3;
     sum =a+b;
     sum1=a-b;
     sum2=c+d;
     sum3=c-d;
     
    printf("%.0f %.0f",sum, sum1);
    printf("\n%.1f %.1f",sum2,sum3);
    return 0;
}
